{{!< main}}

<article>
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Author: {{post.user.username}}</p>
</article>

<section>
  <h3>Comments</h3>
  {{#each post.comments}}
    <article>
      <p>{{content}}</p>
      <p>Comment by: {{user.username}}</p>
    </article>
  {{/each}}
</section>
